---
interface Props {
  title: string;
  subtitle?: string;
  date: Date;
  thumbnail?: string;
  slug: string;
}

const { title, subtitle, date, thumbnail, slug } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(date);

const thumbnailUrl = thumbnail 
  ? `${import.meta.env.BASE_URL}${thumbnail}`
  : `${import.meta.env.BASE_URL}/images/placeholder.jpg`;
---

<article class="article-card">
  <a href={`${import.meta.env.BASE_URL}/blog/${slug}`} class="card-link">
    <img src={thumbnailUrl} alt={title} class="thumbnail" />
    <div class="card-content">
      <h2 class="card-title">{title}</h2>
      {subtitle && <p class="card-subtitle">{subtitle}</p>}
      <time datetime={date.toISOString()} class="card-date">{formattedDate}</time>
    </div>
  </a>
</article>

<style>
  .article-card {
    border: 1px solid #e5e5e5;
    transition: border-color 0.2s ease;
  }

  .article-card:hover {
    border-color: #999;
  }

  .card-link {
    display: block;
    border-bottom: none;
    padding: 1.5rem;
  }

  .card-link:hover {
    border-bottom: none;
  }

  .thumbnail {
    width: 100%;
    height: 200px;
    object-fit: cover;
    margin: 0 0 1rem 0;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .card-title {
    font-size: 1.5rem;
    margin: 0;
    color: #000000;
  }

  .card-subtitle {
    font-size: 1rem;
    color: #4a4a4a;
    line-height: 1.5;
    margin: 0;
  }

  .card-date {
    font-size: 0.875rem;
    color: #666;
    font-family: system-ui, -apple-system, sans-serif;
  }

  @media (max-width: 768px) {
    .card-link {
      padding: 1rem;
    }

    .card-title {
      font-size: 1.25rem;
    }

    .thumbnail {
      height: 150px;
    }
  }
</style>
