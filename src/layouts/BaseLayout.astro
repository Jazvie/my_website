---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "A minimalist technical blog" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.11/dist/katex.min.css" integrity="sha384-nB0miv6/jRmo5UMMR1wu3Gz6NLsoTkbqJghGIsx//Rlm+ZU03BU6SQNC66uf4l5+" crossorigin="anonymous">
  </head>
  <body>
    <header>
      <nav>
        <a href={`${import.meta.env.BASE_URL}/`} class="site-title">Technical Blog</a>
      </nav>
    </header>
    
    <main>
      <slot />
    </main>

    <footer>
      <p>&copy; {new Date().getFullYear()} Technical Blog. All rights reserved.</p>
    </footer>
  </body>
</html>

<style>
  header {
    border-bottom: 1px solid #e5e5e5;
    padding: 2rem 0;
    margin-bottom: 3rem;
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .site-title {
    font-family: system-ui, -apple-system, sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: #000000;
    border-bottom: none;
  }

  .site-title:hover {
    border-bottom: 2px solid #000000;
  }

  main {
    min-height: calc(100vh - 200px);
  }

  footer {
    border-top: 1px solid #e5e5e5;
    padding: 2rem 0;
    margin-top: 4rem;
  }

  footer p {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    font-size: 0.875rem;
    color: #666;
    text-align: center;
  }

  @media (max-width: 768px) {
    header {
      padding: 1.5rem 0;
      margin-bottom: 2rem;
    }

    nav {
      padding: 0 1rem;
    }

    footer {
      margin-top: 3rem;
    }
  }
</style>
